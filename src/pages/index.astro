---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION} lang="en">
  <Container>
    <aside data-pagefind-ignore>
      <h1 class="animate text-3xl font-semibold text-black dark:text-white">
        Fausto Moya
      </h1>
      <div class="space-y-16">
        <section class="space-y-4">
          <article>
            <span class="animate">
              <p>
                Engineer by skill and creator at heart, I've spent years <strong
                  >designing</strong
                >, <strong>developing</strong>, and <strong
                  >deploying software</strong
                >. I've contributed to projects across <strong
                  >various fields</strong
                >, from <strong>e-commerce</strong> to <strong
                  >container shipping planning</strong
                >, from <strong>fintech</strong> to <strong>food delivery</strong>.
                Whether in a <strong>startup</strong> where the tech team could fit
                in a single car or at a <strong>tech giant</strong> serving millions
                of users, I've been passionate about <strong
                  >building solutions that make an impact</strong
                >.
              </p>
            </span>
            <span class="animate">
              <p>
                Thanks to my career, I had the opportunity to embark on an
                exciting journey of migration. I left my beloved ðŸ‡¦ðŸ‡· <strong>Argentina</strong> to
                embrace new experiences, meet incredible people, and immerse
                myself in the rich culture of ðŸ‡³ðŸ‡± <strong>The Netherlands</strong>.
              </p>
            </span>
            <span class="animate">
              <p>
                I'm currently working as a <strong>Technical Lead</strong> at
                <a href="https://www.aholddelhaize.com/about" target="_blank"
                  >Ahold Delhaize</a
                >, where I focus on modernizing internal tools, <strong
                  >delivering high-quality software</strong
                >, and <strong>driving business value</strong> at a rapid pace. Before
                this, I worked at <a
                  href="https://www.routescanner.com/about"
                  target="_blank">Routescanner</a
                >, helping customers reduce CO2 emissions by <a
                  href="https://www.routescanner.com/features/route-optimizer"
                  target="_blank">optimizing their trade lanes</a
                >
                with our innovative engine. I've also contributed to other notable
                organizations like <a
                  href="https://www.mercadolibre.com.ar/institucional"
                  target="_blank">Mercado Libre</a
                >,
                <a href="https://www.uala.com.ar/nosotros" target="_blank"
                  >UalÃ¡</a
                >, and <a
                  href="https://about.rappi.com/about-us"
                  target="_blank">Rappi</a
                >.
              </p>
            </span>
            <span class="animate">
              <p>
                I also dedicate time to <strong>tutoring</strong> university students
                in programming, databases, and testing. This blog was created from
                those sessions to provide useful documentation for my students and,
                hopefully, to
                <strong>support the Spanish-speaking community</strong> interested
                in exploring software engineering.
              </p>
            </span>
          </article>
        </section>

        <section class="animate space-y-6">
          <div class="flex flex-wrap items-center justify-between gap-y-2">
            <h2 class="font-semibold text-black dark:text-white">
              Latest posts
            </h2>
            <Link href="/blog"> See all posts </Link>
          </div>
          <ul class="not-prose flex flex-col gap-4">
            {
              blog.map((post) => (
                <li>
                  <ArrowCard entry={post} />
                </li>
              ))
            }
          </ul>
        </section>

        <section class="animate space-y-6">
          <div class="flex flex-wrap items-center justify-between gap-y-2">
            <h2 class="font-semibold text-black dark:text-white">
              Recent projects
            </h2>
            <Link href="/projects"> See all projects </Link>
          </div>
          <ul class="not-prose flex flex-col gap-4">
            {
              projects.map((project) => (
                <li>
                  <ArrowCard entry={project} />
                </li>
              ))
            }
          </ul>
        </section>

        <section class="animate space-y-4">
          <h2 class="font-semibold text-black dark:text-white">
            Let's Connect
          </h2>
          <article>
            <p>
              If you want to get in touch with me about something or just to say
              hi, reach out on social media or send me an email.
            </p>
          </article>
          <ul class="not-prose flex flex-wrap gap-2">
            {
              SOCIALS.map((SOCIAL) => (
                <li class="flex gap-x-2 text-nowrap">
                  <Link
                    href={SOCIAL.HREF}
                    external
                    aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
                  >
                    {SOCIAL.NAME}
                  </Link>
                  {"/"}
                </li>
              ))
            }
            <li class="line-clamp-1">
              <Link
                href={`mailto:${SITE.EMAIL}`}
                aria-label={`Email ${SITE.TITLE}`}
              >
                {SITE.EMAIL}
              </Link>
            </li>
          </ul>
        </section>
      </div>
    </aside>
  </Container>
</Layout>
