# Cache immutable assets with content hashes for 1 year
/_astro/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 year (they have content hashes)
/_astro/*.webp
  Cache-Control: public, max-age=31536000, immutable
/_astro/*.avif
  Cache-Control: public, max-age=31536000, immutable
/_astro/*.jpg
  Cache-Control: public, max-age=31536000, immutable
/_astro/*.png
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year
/_astro/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Cache static assets for 1 year
/favicon.svg
  Cache-Control: public, max-age=31536000, immutable

# Cache HTML pages for 1 hour with stale-while-revalidate
/*.html
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400

# Cache homepage specifically (shorter due to frequent updates)
/
  Cache-Control: public, max-age=1800, stale-while-revalidate=86400

# Cache blog posts for 1 week
/blog/*
  Cache-Control: public, max-age=604800, stale-while-revalidate=2592000

# Cache pagefind search index for 1 day
/pagefind/*
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800

# Cache sitemap for 1 day
/sitemap-*.xml
  Cache-Control: public, max-age=86400

# Cache RSS feed for 1 hour
/rss.xml
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400

# Security headers for all pages
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), fullscreen=(), picture-in-picture=(), autoplay=(), accelerometer=(), ambient-light-sensor=(), battery=(), display-capture=(), document-domain=(), encrypted-media=(), execution-while-not-rendered=(), execution-while-out-of-viewport=(), gamepad=(), midi=(), navigation-override=(), screen-wake-lock=(), web-share=(), xr-spatial-tracking=()
